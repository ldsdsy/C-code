#include <iostream>

using namespace std;
int f(int m,int n)
{

    if(m<n)
        return 0;
    if(m==n)
        return 1;
    if(n==0)
        return 1;
    int k=f(m-1,n-1)+f(m-1,n);
    return k;
}
int main()
{
   int m,n;
   cout<<"put int m and n:";    //m个球中取n个的取法
   cin>>m>>n;
   cout<<f(m,n)<<endl;
    return 0;
}
